mixin checkbox-input(name, value, title)
  div.checkbox-input-container
    input(type="checkbox", class="checkbox-input", id=name, name=name, value=value)
    label(class="text-rus", for=name)= title



div(class="checkbox-list")
    div(class="checkbox-list-title")
        div(class="title-sm-rus") дополнительные удобства
        div(class="checkbox-list-btn")
            i(class="material-icons") expand_more
    div(class="checkbox-list-inputs")
        +checkbox-input("breakfest", "breakfest", "Завтрак")
        +checkbox-input("dinner", "dinner", "Ужин")
