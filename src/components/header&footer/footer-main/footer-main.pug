mixin footer-nav-title(name)
    h3.title-sm= name
mixin footer-nav-item(href, name)
    a.link(href=href)= name

div(class="footer")
    div(class="footer-wide")
        div(class="footer-box")
            div(class="footer-logo")
            p(class="text") Lorem ipsum dolor sit amet consectetur adipiscing elit aliquam eget nullam pellentesque aliquam curabitur cociis.
        div(class="footer-navigation")
            +footer-nav-title('Navigation')
            +footer-nav-item('#', 'About Us')
            +footer-nav-item('#', 'News')
            +footer-nav-item('#', 'Support')
            +footer-nav-item('#', 'Products')
        div(class="footer-aboutus")
            +footer-nav-title('About us')
            +footer-nav-item('#', 'Who we are')
            +footer-nav-item('#', 'Our team')
            +footer-nav-item('#', 'Careers')
            +footer-nav-item('#', 'Investors')
        div(class="footer-support")
            +footer-nav-title('support')
            +footer-nav-item('#', 'Documentation')
            +footer-nav-item('#', 'Community')
            +footer-nav-item('#', 'Get in Touch')
        div(class="footer-subscribe")
            +footer-nav-title('Subscribe to our newsletter')
            p(class="text") Receive our latest news and promotions in your inbox!
            form(action="#", method="post", id="email")
                input(type="email", form="email", name="input-email", placeholder="Your email address")
                button(type="submit", form="email", name="button-email")
                    svg(width='18', height='18', viewbox='0 0 18 18', fill='none', xmlns='http://www.w3.org/2000/svg')
                        path(d='M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z', fill='url(#paint0_linear)')
                        defs
                            lineargradient#paint0_linear(x1='9', y1='-13', x2='9', y2='31', gradientunits='userSpaceOnUse')
                                stop(stop-color='#BC9CFF')
                                stop(offset='1', stop-color='#8BA4F9')
    div(class="footer-tight")
        p(class="text") Copyright Â© 2018 Toxin UI Kit. All rights reserved.
        div(class="network")
            a(class="network-tw", href="https://twitter.com/", target="_blank")

            a(class="network-fb", href="https://facebook.com/", target="_blank")
                
            a(class="network-inst", href="https://twitterinstagram.com/", target="_blank")
                